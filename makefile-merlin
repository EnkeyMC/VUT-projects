FILE = proj3
BIN = /usr/local/share/texlive/bin
PS2PDFBIN = /usr/bin

all: $(FILE).ps
	$(PS2PDFBIN)/ps2pdf -sPAPERSIZE=a4 $<

$(FILE).ps: $(FILE).dvi
	$(BIN)/dvips $<

$(FILE).dvi: $(FILE).tex
	$(BIN)/latex $<
	$(BIN)/latex $<

clean:
	rm $(FILE).dvi
	rm $(FILE).ps
	rm $(FILE).pdf
	rm $(FILE).log
	rm $(FILE).aux
